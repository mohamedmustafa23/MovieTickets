@model MovieTickets.ViewModels.AdminHomeVM

<div class="card mb-3">
    <div class="card-body px-xxl-0 pt-4">
        <div class="row g-0">
            <div class="col-xxl-3 col-md-6 px-3 text-center border-end-md border-bottom border-bottom-xxl-0 pb-3 p-xxl-0 ps-md-0">
                <div class="icon-circle icon-circle-primary"><img src="~/Images/3873997.png" alt="Actors" width="40" height="40" /></div>
                <h4 class="mb-1 font-sans-serif"><span class="text-700 mx-2" data-countup='{"endValue":"@Model.Actors.Count()"}'>0</span><span class="fw-normal text-600">Actors</span></h4>
            </div>
            <div class="col-xxl-3 col-md-6 px-3 text-center border-end-xxl border-bottom border-bottom-xxl-0 pb-3 pt-4 pt-md-0 pe-md-0 p-xxl-0">
                <div class="icon-circle icon-circle-info"><img src="~/Images/film-slate.png" alt="Movies" width="40" height="40" /></div>
                <h4 class="mb-1 font-sans-serif"><span class="text-700 mx-2" data-countup='{"endValue":"@Model.Movies.Count()"}'>0</span><span class="fw-normal text-600">Movies</span></h4>
            </div>
            <div class="col-xxl-3 col-md-6 px-3 text-center border-end-md border-bottom border-bottom-md-0 pb-3 pt-4 p-xxl-0 pb-md-0 ps-md-0">
                <div class="icon-circle icon-circle-success"><img src="~/Images/cinema.png" alt="CinemaHalls" width="40" height="40" /></div>
                <h4 class="mb-1 font-sans-serif"><span class="text-700 mx-2" data-countup='{"endValue":"@Model.CinemaHalls.Count()"}'>0</span><span class="fw-normal text-600">CinemaHalls</span></h4>
            </div>
            <div class="col-xxl-3 col-md-6 px-3 text-center pt-4 p-xxl-0 pb-0 pe-md-0">
                <div class="icon-circle icon-circle-warning"><img src="~/Images/8058572.png" alt="Category" width="40" height="40" /></div>
                <h4 class="mb-1 font-sans-serif"><span class="text-700 mx-2" data-countup='{"endValue":"@Model.Categories.Count()"}'>0</span><span class="fw-normal text-600">Categories</span></h4>
            </div>
        </div>
    </div>
</div>
<div class="col-md-6 col-xxl-3 pe-md-2 mb-3 mb-xxl-0">
    <div class="card">
        <div class="card-header d-flex flex-between-center bg-body-tertiary py-2">
            <h6 class="mb-0">Active Users</h6>
            <div class="dropdown font-sans-serif btn-reveal-trigger">
                <button class="btn btn-link text-600 btn-sm dropdown-toggle dropdown-caret-none btn-reveal" type="button" id="dropdown-active-user" data-bs-toggle="dropdown" data-boundary="viewport" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h fs-11"></span></button>
                <div class="dropdown-menu dropdown-menu-end border py-2" aria-labelledby="dropdown-active-user">
                    <a class="dropdown-item" href="#!">View</a><a class="dropdown-item" href="#!">Export</a>
                    <div class="dropdown-divider"></div><a class="dropdown-item text-danger" href="#!">Remove</a>
                </div>
            </div>
        </div>
        @foreach(var actor in Model.Actors.Take(5) )
        {
            <div class="card-body py-2">
                <div class="d-flex align-items-center position-relative mb-3">
                    <div class="avatar avatar-2xl status-online">
                        <img class="rounded-circle" src="@actor.Img" alt="" />

                    </div>
                    <div class="flex-1 ms-3">
                        <h6 class="mb-0 fw-semi-bold"><a class="stretched-link text-900" href="@actor.Img">@actor.Name</a></h6>
                    </div>
                </div>

            </div>
        }
        <div class="card-footer bg-body-tertiary p-0"><a class="btn btn-sm btn-link d-block w-100 py-2" href="/Admin/Actor/Index">All active users<span class="fas fa-chevron-right ms-1 fs-11"></span></a></div>
    </div>
</div>