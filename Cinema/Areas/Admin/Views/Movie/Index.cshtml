@model List<Movie>

<div class="card shadow-sm">
    <div class="card-header bg-body-tertiary d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-semibold">
            Actors <span class="text-muted fs-8">(@Model.Count)</span>
        </h5>
        <a asp-area="Admin" asp-controller="Actor" asp-action="Create" class="btn btn-sm btn-primary">
            <i class="fas fa-plus me-1"></i> Add New
        </a>
    </div>

    <div class="card-body bg-body-tertiary px-3 py-3">
        <div class="row g-3 text-center fs-10">

            @foreach (var movie in Model) 
            {
                <div class="col-6 col-md-4 col-lg-3 col-xxl-2">
                    <div class="card h-100 border-0 shadow-sm position-relative hover-shadow">
                        <div class="card-body p-3">
                            <a asp-area="Admin"
                               asp-controller="Movie"
                               asp-action="Edit"
                               asp-route-id="@movie.Id"
                               class="text-decoration-none text-dark">
                                <img class="img-thumbnail img-fluid rounded-circle mb-3 shadow-sm"
                                     src="@movie.MainImg" alt="@movie.Name" width="100" />
                                <h6 class="mb-1 fw-bold text-dark">@movie.Name</h6>
                            </a>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-center gap-2 pb-3">
                            <a asp-area="Admin" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" 
                               class="btn btn-sm btn-outline-primary px-3">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-area="Admin" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" method="post" class="m-0 p-0">
                                <button type="submit" class="btn btn-sm btn-outline-danger px-3"
                                        onclick="return confirm('Are you sure you want to delete this actor?');">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }

            <!-- Add new actor card -->
            <div class="col-6 col-md-4 col-lg-3 col-xxl-2">
                <div class="card h-100 border-0 shadow-sm d-flex justify-content-center align-items-center cursor-pointer"
                     style="min-height: 200px;"
                     title="Add new actor"
                     onclick="window.location.href='/Admin/Actor/Create'">
                    <div class="display-5 text-primary fw-bold">+</div>
                </div>
            </div>
        </div>
    </div>
</div>
